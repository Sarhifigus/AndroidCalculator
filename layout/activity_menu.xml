<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.oli.calculator.Menu">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Encrypt/decrypt"
            android:layout_width="189dp"
            android:layout_height="51dp"
            android:id="@+id/B3"
            android:textAppearance="@android:style/TextAppearance.Large"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="190dp"
            android:layout_marginStart="94dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="94dp" />

        <Button
            android:text="Open File"
            android:layout_width="189dp"
            android:layout_height="51dp"
            android:id="@+id/B2"
            android:layout_marginEnd="94dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="94dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="130dp"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <Button
            android:text="New File"
            android:layout_width="189dp"
            android:layout_height="51dp"
            android:id="@+id/B1"
            android:layout_marginEnd="94dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="94dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <TextView
            android:layout_height="46dp"
            tools:layout_editor_absoluteY="25dp"
            android:id="@+id/textView2"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:text="Hidden Vault"
            android:layout_width="189dp"
            android:layout_marginEnd="94dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="94dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:text="ERASE ALL"
            android:layout_width="189dp"
            android:layout_height="51dp"
            android:id="@+id/B6"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_marginStart="94dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="94dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            android:layout_marginTop="370dp" />

        <Button
            android:text="Back to Calculator"
            android:layout_width="189dp"
            android:id="@+id/B5"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_marginStart="94dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="94dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            android:layout_marginTop="420dp"
            android:layout_height="100dp" />

        <Button
            android:text="Export File"
            android:layout_width="189dp"
            android:layout_height="51dp"
            android:id="@+id/B4"
            android:textAppearance="@android:style/TextAppearance.Large"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="330dp"
            android:layout_marginEnd="94dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="94dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:text="Edit Settings"
            android:layout_width="189dp"
            android:layout_height="51dp"
            android:id="@+id/B7"
            android:textAppearance="@android:style/TextAppearance.Large"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="94dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="94dp"
            app:layout_constraintLeft_toLeftOf="parent" />

    </android.support.constraint.ConstraintLayout>
</RelativeLayout>
