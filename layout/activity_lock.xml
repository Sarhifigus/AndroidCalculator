<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lock"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.oli.calculator.Lock">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true">

        <TextView
            android:text="FileName:"
            android:layout_height="47dp"
            android:id="@+id/T1"
            android:textAppearance="@android:style/TextAppearance.Large"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="300dp" />

        <CheckBox
            android:text="Kill all tasks to prevent spyware"
            android:layout_width="379dp"
            android:id="@+id/checkBox"

            android:textAppearance="@android:style/TextAppearance.Large"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="30dp"

            android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:text="Enter key below"
            android:layout_width="379dp"
            android:layout_height="42dp"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/textView9"
            android:textAppearance="@android:style/TextAppearance.Large"

            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText

            android:layout_width="379dp"
            android:inputType="textPassword"

            android:ems="10"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/E1"

            android:layout_height="70dp"
            android:layout_marginTop="120dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="?attr/colorButtonNormal" />

        <Button
            android:text="Decrypt"
            android:layout_width="186dp"
            android:layout_height="71dp"
            android:id="@+id/B2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="200dp"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_marginTop="300dp"/>

        <Button
            android:text="Encrypt"
            android:layout_width="186dp"
            android:layout_height="71dp"
            android:id="@+id/B1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="300dp"

            android:textAppearance="@android:style/TextAppearance.Large" />

        <TextView
            android:text="Select Algorithm"
            android:layout_width="374dp"
            android:layout_height="29dp"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/textView6"

            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_marginTop="210dp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <RadioButton
            android:text="AES128 -SSL for large companies"
            android:layout_width="379dp"
            android:layout_height="34dp"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/R1"
            android:textAppearance="@android:style/TextAppearance.Large"

            android:layout_marginTop="260dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <RadioButton
            android:text="AES256 -Used by US government"
            android:layout_height="45dp"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/R2"
            android:layout_width="379dp"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_marginTop="288dp"
            app:layout_constraintTop_toTopOf="parent"

            />

        <RadioButton
            android:text="BlowFish384 -Not really used"
            android:layout_width="379dp"
            android:layout_height="45dp"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/R3"

            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_marginTop="330dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <RadioButton
            android:text="Modernised Engima512(Insecure)"
            android:layout_width="379dp"
            android:layout_height="45dp"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/R4"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_marginTop="368dp"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:text="Back"
            android:layout_height="48dp"
            android:id="@+id/B3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="88dp"
            android:textAppearance="@android:style/TextAppearance.Large" />



    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
